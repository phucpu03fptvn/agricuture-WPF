        <Image Source="pack://application:,,,/Assets/loginBackground.jpg" 
               Stretch="Uniform" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Height="200"  
               Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Margin="0,225,0,0">
            <TextBlock Text="Chào Mừng Đến Với Trang" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#007A33"
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
            <TextBlock Text="Hãy Khám Phá Các Sản Phẩm Nông Sản Của Chúng Tôi!" 
                       FontSize="22" 
                       Foreground="#4CAF50"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
