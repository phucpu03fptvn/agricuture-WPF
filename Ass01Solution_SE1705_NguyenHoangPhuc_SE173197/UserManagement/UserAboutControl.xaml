            <TextBlock Text="Liên hệ với chúng tôi để biết thêm thông tin!" FontSize="18" Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
